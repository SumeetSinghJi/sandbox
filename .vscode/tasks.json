{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Windows g++",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}/headers",
                "-IC:/Program Files/boost",
                "-IC:/Program Files/SDL2/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/SDL2_image/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/SDL2_Mixer/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/SDL2_TTF/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/SDL2_net/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/glad/include",
                "-g",
                "${file}",
                "${workspaceFolder}/src/*.cpp",
                "C:/Program Files/glad/src/glad.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-LC:/Program Files/boost/stage/lib",
                "-LC:/Program Files/SDL2/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_image/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_Mixer/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_TTF/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_net/x86_64-w64-mingw32/lib",
                "-lboost_system-mgw13-mt-x64-1_85",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lSDL2_net",
                "-lopengl32",
                "-lws2_32", // for boost
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "-stdlib=libc++",
                "-fexceptions",
                "-I/opt/homebrew/include",
                "-L/opt/homebrew/lib",
                "-L/opt/homebrew/Cellar/boost/1.85.0/lib",
                "-lboost_system",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_net",
            ],            
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
