{
    "tasks": [
        {
            "type": "shell",
            "label": "Windows MSVC",
            "command": "cl.exe",
            "args": [
                "/EHsc",
                "/I", "C:/Program Files (x86)/Microsoft Visual Studio/2022/Community/VC/Tools/MSVC/14.39.33519/include", // For Visual Studio C Standard Include path
                "/I", "${workspaceFolder}/headers",
                "/I", "C:/Program Files/boost",
                "/I", "C:/Program Files/SDL2/x86_64-w64-mingw32/include/SDL2",
                "/I", "C:/Program Files/SDL2_image/x86_64-w64-mingw32/include/SDL2",
                "/I", "C:/Program Files/SDL2_Mixer/x86_64-w64-mingw32/include/SDL2",
                "/I", "C:/Program Files/SDL2_TTF/x86_64-w64-mingw32/include/SDL2",
                "/I", "C:/Program Files/googletest/googletest/include",
                "/I", "C:/Program Files/curl/include",
                "/I", "C:/Program Files/libzip/install/include",
                "/I", "C:/ffmpeg",
                "/std:c++17",
                "/Zi",
                "/EHsc",
                "/MD",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/*.cpp",
                "/Fe:${workspaceFolder}/main.exe",
                "/link",
                "/LIBPATH:C:/Program Files/boost/stage/lib",
                "/LIBPATH:C:/Program Files/SDL2/x86_64-w64-mingw32/lib",
                "/LIBPATH:C:/Program Files/SDL2_image/x86_64-w64-mingw32/lib",
                "/LIBPATH:C:/Program Files/SDL2_Mixer/x86_64-w64-mingw32/lib",
                "/LIBPATH:C:/Program Files/SDL2_TTF/x86_64-w64-mingw32/lib",
                "/LIBPATH:C:/Program Files/googletest/build/lib",
                "/LIBPATH:C:/Program Files/curl/lib",
                "/LIBPATH:C:/Program Files/libzip/install/lib",
                "/LIBPATH:C:/ffmpeg/lib",
                "ws2_32.lib",
                "SDL2.lib",
                "SDL2_image.lib",
                "SDL2_ttf.lib",
                "SDL2_mixer.lib",
                "libcurl.lib",
                "libzip.lib",
                "avformat.lib",
                "avcodec.lib",
                "avutil.lib",
                "swscale.lib",
                "gtest.lib",
                "ws2_32.lib",
                "iconv.lib",
                "zlib.lib",
                "avfilter.lib",
                "gtest_main.lib",
                "iconv.lib",
                "zlib.lib",
                "ws2_32.lib", // for boost
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Windows g++",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}/headers",
                "-IC:/Program Files/boost",
                "-IC:/Program Files/SDL2/x86_64-w64-mingw32/include",
                "-IC:/Program Files/SDL2_image/x86_64-w64-mingw32/include",
                "-IC:/Program Files/SDL2_Mixer/x86_64-w64-mingw32/include",
                "-IC:/Program Files/SDL2_TTF/x86_64-w64-mingw32/include",
                "-IC:/Program Files/googletest/googletest/include",
                "-IC:/Program Files/curl/include/",
                "-IC:/Program Files/libzip/install/include",
                "-IC:/ffmpeg",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${workspaceFolder}/main.exe",
                "-LC:/Program Files/boost/stage/lib",
                "-LC:/Program Files/SDL2/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_image/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_Mixer/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_TTF/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/googletest/build/lib",
                "-LC:/Program Files/curl/lib",
                "-LC:/Program Files/libzip/install/lib",
                "-LC:/ffmpeg/lib",
                "-lboost_system-mgw13-mt-x64-1_85",
                "-lws2_32",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lavformat",
                "-lavcodec",
                "-lavutil",
                "-lswscale",
                "-liconv",
                "-lz",
                "-lavfilter",
                "-lgtest",
                "-lgtest_main",
                "-lcurl",
                "-lzip",
                "-lz",
                "-lws2_32", // for boost
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "Linux g++",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "-I${workspaceFolder}/headers",
                "-I/usr/local/include",
                "-I/usr/include/",
                "-I/usr/include/x86_64-linux-gnu",
                "-L/usr/lib",
                "-lboost_system",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lavformat",
                "-lavcodec",
                "-lavutil",
                "-lswscale",
                "-lgtest",
                "-lcurl",
                "-lzip",
                "-lz"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "MacOS clang",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++17",
                "-stdlib=libc++",
                "-I${workspaceFolder}/headers",
                "-I/opt/homebrew/include",
                "-I/opt/homebrew/Cellar/curl/8.7.1/include", // curl include path
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L/opt/homebrew/lib",
                "-L/opt/homebrew/opt/curl/lib", // curl lib path
                "-lboost_system",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lcurl", // curl library
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        },
        {
            "type": "shell",
            "label": "Windows cppcheck",
            "command": "cppcheck",
            "args": [
                "--enable=all",
                "--inconclusive",
                "--std=c++17",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/headers/*.hpp",
                "--suppress=missingIncludeSystem:*"
            ],
            "problemMatcher": {
                "owner": "cppcheck",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(/d+):/s*(warning|error):/s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        }
    ],
    "version": "2.0.0"
}