{
    "tasks": [
        { // Windows build
            "type": "cppbuild",
            "label": "Windows g++",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}/headers",
                "-IC:/msys2/mingw64/include",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-LC:/msys2/mingw64/lib",
                "-lboost_system-mt",
                "-lws2_32", // dependency for boost::asio
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lavformat", // for ffmpeg library
                "-lavcodec", // for ffmpeg library
                "-lavutil", // for ffmpeg library
                "-lswscale", // for ffmpeg library
                "-lavfilter", // for ffmpeg library
                "-lgtest",
                "-lgtest_main",
                "-lcurl",
                "-lzip",
                "-lz", // zlib
                // "-mwindows" // uncomment on final build
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        },
        { // Mac build
            "type": "cppbuild",
            "label": "MacOS clang",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++17",
                "-stdlib=libc++",
                "-I/opt/homebrew/include",
                "-I/opt/homebrew/Cellar/curl/8.7.1/include", // curl include path
                "-I${workspaceFolder}/headers",
                "-g",
                "${file}","${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L/opt/homebrew/lib",
                "-L/opt/homebrew/opt/curl/lib", // curl lib path
                "-lboost_system",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lavformat",
                "-lavcodec",
                "-lavutil",
                "-lswscale",
                "-lgtest",
                "-lcurl",
                "-lzip",
                "-lz"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        },
        { // Linux build
            "type": "cppbuild",
            "label": "Linux g++",
            "command": "g++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "-I${workspaceFolder}/headers",
                "-I/usr/include/",
                "-I/usr/include/x86_64-linux-gnu", // for - curl (apt libcurl4-gnutls-dev)
                "-L/usr/lib",
                "-lboost_system",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lavformat",
                "-lavcodec",
                "-lavutil",
                "-lswscale",
                "-lswresample",
                "-lgtest",
                "-lcurl",
                "-lzip",
                "-lz"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        { // Windows static analyser
            "type": "shell",
            "label": "Windows cppcheck",
            "command": "cppcheck",
            "args": [
                "--enable=all",
                "--inconclusive",
                "--std=c++17",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/headers/*.hpp",
                "--suppress=missingIncludeSystem:*"
            ],
            "problemMatcher": {
                "owner": "cppcheck",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+): (warning|error|style): (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ],
    "version": "2.0.0"
}