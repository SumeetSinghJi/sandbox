{
    "tasks": [
        { // Windows build
            "type": "cppbuild",
            "label": "Windows g++",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-I${workspaceFolder}/headers",
                "-IC:/Program Files/boost",
                "-IC:/Program Files/SDL2/x86_64-w64-mingw32/include",
                "-IC:/Program Files/googletest/googletest/include",
                "-IC:/Program Files/curl/include/",
                "-IC:/Program Files/libzip/install/include",
                "-IC:/Program Files/ffmpeg",
                "-g",
                "${file}",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-LC:/Program Files/boost/stage/lib",
                "-LC:/Program Files/SDL2/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/googletest/build/lib",
                "-LC:/Program Files/curl/lib",
                "-LC:/Program Files/libzip/install/lib",
                "-LC:/Program Files/ffmpeg/lib",
                "-lboost_system-mgw13-mt-x64-1_85", // for boost::asio library
                "-lws2_32", // dependency for boost::asio library
                "-lmingw32",
                "-lSDL2main", // for SDL Library
                "-lSDL2", // for SDL Library
                "-lSDL2_image", // for SDL Library
                "-lSDL2_ttf", // for SDL Library
                "-lSDL2_mixer", // for SDL Library
                "-lavformat", // for ffmpeg library
                "-lavcodec", // for ffmpeg library
                "-lavutil", // for ffmpeg library
                "-lswscale", // for ffmpeg library
                "-lavfilter", // for ffmpeg library
                "-lgtest", // for Google Test library
                "-lgtest_main", // for Google Test library
                "-lcurl", // for curl library
                "-lzip", //for libzip library
                "-lz", // zlib library for libzip library
                // "-mwindows" // uncomment on final build
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
            },
            "detail": "Task generated by Debugger."
        },
        { // Linux build
            "type": "cppbuild",
            "label": "Linux g++",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-std=c++17",
                "-I${workspaceFolder}/headers",
                "-I/usr/local/include",
                "-I/usr/include/",
                "-I/usr/include/x86_64-linux-gnu",
                "-L/usr/lib",
                "-lboost_system",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lavformat",
                "-lavcodec",
                "-lavutil",
                "-lswscale",
                "-lgtest",
                "-lcurl",
                "-lzip",
                "-lz"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        { // Mac build
            "type": "cppbuild",
            "label": "MacOS clang",
            "command": "clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++17",
                "-stdlib=libc++",
                "-I/opt/homebrew/include",
                "-I/opt/homebrew/Cellar/curl/8.7.1/include", // curl include path
                "-I${workspaceFolder}/headers",
                "-g",
                "${file}",
                "${workspaceFolder}/src/*.cpp",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-L/opt/homebrew/lib",
                "-L/opt/homebrew/opt/curl/lib", // curl lib path
                "-lboost_system",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lavformat",
                "-lavcodec",
                "-lavutil",
                "-lswscale",
                "-lgtest",
                "-lcurl",
                "-lzip",
                "-lz"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build"
            },
            "detail": "Task generated by Debugger."
        },
        { // Windows static analyser
            "type": "shell",
            "label": "Windows cppcheck",
            "command": "cppcheck",
            "args": [
                "--enable=all",
                "--inconclusive",
                "--std=c++17",
                "${workspaceFolder}/*.cpp",
                "${workspaceFolder}/src/*.cpp",
                "${workspaceFolder}/headers/*.hpp",
                "--suppress=missingIncludeSystem:*"
            ],
            "problemMatcher": {
                "owner": "cppcheck",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.*):(/d+):/s*(warning|error):/s*(.*)$",
                    "file": 1,
                    "line": 2,
                    "severity": 3,
                    "message": 4
                }
            }
        }
    ],
    "version": "2.0.0"
}