{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "Windows g++",
            "command": "g++",
            "args": [
                "-fdiagnostics-color=always",
                "-IC:/Program Files/SDL2/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/SDL2_image/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/SDL2_Mixer/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/SDL2_TTF/x86_64-w64-mingw32/include/SDL2",
                "-IC:/Program Files/glad/include",
                "-g",
                "${file}",
                // "${workspaceFolder}/src/*.cpp",
                "C:/Program Files/glad/src/glad.c",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}.exe",
                "-LC:/Program Files/boost/stage/lib",
                "-LC:/Program Files/SDL2/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_image/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_Mixer/x86_64-w64-mingw32/lib",
                "-LC:/Program Files/SDL2_TTF/x86_64-w64-mingw32/lib",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-lSDL2_ttf",
                "-lSDL2_mixer",
                "-lopengl32"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
