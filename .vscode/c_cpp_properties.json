{
    "configurations": [
        { // Windows build
            "name": "Win32",
            "includePath": [
                "${workspaceFolder}/headers",
                "C:/Program Files/boost", // boost
                "C:/Program Files/glad/include", // GLAD
                "C:/Program Files/SDL2/x86_64-w64-mingw32/include", // SDL
                "C:/Program Files/googletest/googletest/include", // Google Test
                "C:/Program Files/curl/include", // curl
                "C:/Program Files/libzip/lib", // libzip
                "C:/Program Files/ffmpeg" // ffmpeg
            ],
            "defines": [
                "_DEBUG",
                "UNICODE",
                "_UNICODE"
            ],
            "windowsSdkVersion": "10.0.22621.0",
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "windows-gcc-x64"
        },
        { // Mac build
            "name": "Mac",
            "includePath": [
                "${workspaceFolder}/headers",
                "/opt/homebrew/include", // Include path for all Brew installed packages
                "-I/opt/homebrew/Cellar/curl/8.7.1/include", // curl include path
            ],
            "defines": [],
            "macFrameworkPath": [
                "/Library/Developer/CommandLineTools/SDKs/MacOSX13.sdk/System/Library/Frameworks"
            ],
            "compilerPath": "/opt/homebrew/opt/llvm/bin/clang",
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "macos-clang-arm64"
        },
        { // Linux build
            "name": "Linux",
            "includePath": [
                "${workspaceFolder}/headers",
                "/usr/include", // Include path for libzip/zlib
                "/usr/local/include",
                "/usr/include/", // All SDL libraries + Gtest = ffmpeg
                "/usr/include/x86_64-linux-gnu" // from apt install libcurl4-gnutls-dev
                /* FFMPEG Linux compilation guide to produce headers e.g. avconfig.h
                
                    sudo apt-get install build-essential libmp3lame-dev libopus-dev libvpx-dev libx264-dev libx265-dev libfdk-aac-dev
                    
                    git clone https://git.ffmpeg.org/ffmpeg.git
                    
                    cd ffmpeg
                    
                    ./configure --prefix=/usr/local --enable-gpl --enable-nonfree --enable-libmp3lame --enable-libopus --enable-libvpx --enable-libx264 --enable-libx265 --enable-libfdk-aac
                    
                    make -j$(nproc)
                    
                    sudo make install
                */
            ],
            "defines": [],
            "cStandard": "c23",
            "cppStandard": "c++23",
            "intelliSenseMode": "gcc-x64"
        }
    ],
    "version": 4
}